<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">
    
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cancel_setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="15sp"
                    android:textColor="@color/colorGrey"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/update_acc_setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/setting_cardview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="12dp"
        android:layout_below="@id/app_bar_setting"
        app:cardCornerRadius="75dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/user_profile_image_setting"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/update_profile_img_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_cardview"
        android:text="Change Profile"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorGrey"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/setting_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_profile_img_text"
        android:background="@drawable/input_design"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Name"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorGrey"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/setting_email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_name_txt"
        android:background="@drawable/input_design"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Email"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorGrey"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/setting_address_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_email_txt"
        android:background="@drawable/input_design"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Address"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorGrey"
        android:textSize="17sp"/>


</RelativeLayout>